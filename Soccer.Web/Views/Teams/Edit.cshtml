@model Soccer.Web.Models.TeamViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LogoPath" />

            <partial name="_Team" />

            <div class="form-group" style="text-align: center">
                <a asp-action="Index" class="btn btn-default btn-sm">Cancel</a>
                <input type="submit" value="Save" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        @if (Model.LogoPath != null)
        {
            <img src="@Url.Content(Model.LogoPath)" style="width:120px;height:100px;max-width: 100%" title="item.Name" alt="item.Name" />
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
